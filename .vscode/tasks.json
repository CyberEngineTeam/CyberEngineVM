{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "g++",
            "type": "shell",
            "args": [
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/out/run.o"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Run",
            "command": "${workspaceFolder}/out/run.o",
            "problemMatcher": [],
            "dependsOn": [
                "Build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}